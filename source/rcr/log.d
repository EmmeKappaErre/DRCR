module rcr.log;

/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
interface ILog
{
    void    log(string msg);
    void    warning(string msg);
    void    error(string msg);
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
class ConsoleLog : ILog
{
    import std.stdio;

    void    log(string msg) { writeln("LOG: " ~ msg); }
    void    warning(string msg) { writeln("WRN: " ~ msg); }
    void    error(string msg) { writeln("ERR: " ~ msg); }
}